---
import type { ImageMetadata } from 'astro'
import { Picture } from 'astro:assets'

import Link from './link.astro'

import styles from './project-thumbnail-list.module.scss'

interface Props {
	class?: string
	items: {
		id: string
		thumbnail: ImageMetadata
		title: string
	}[]
}
const { class: forwardedClass, items } = Astro.props
---

<ul class:list={[styles['project-list'], forwardedClass]}>
	{
		items.map((project) => (
			<li>
				<Link href={`/work/${project.id}/`}>
					<Picture
						alt=""
						formats={['avif', 'webp']}
						sizes={[
							'(min-width: 52em) calc((100vw - 4rem - 1rem) / 3)',
							'(min-width: 35em) calc((100vw - 4rem - 0.5rem) / 2)',
							'calc(100vw - 4rem)',
						].join()}
						src={project.thumbnail}
						height={500}
						width={900}
						widths={[500, 640, 750, project.thumbnail.width]}
					/>
					<span>{project.title}</span>
				</Link>
			</li>
		))
	}
</ul>
